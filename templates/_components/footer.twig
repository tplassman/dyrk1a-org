{##
 # Footer component
 # @param {object} logo
 #}

{# Params #}
{% set logo = logo|default(null) %}

{# Variables #}
{% set handle = 'footer' %}

{# Markup #}
<div class="{{ handle }}">
    <a href="{{ siteUrl() }}" title="{{ siteName }}">
        {% if logo %}
            <img src="{{ logo.url }}" alt="{{ logo.title }}" />
        {% else %}
            <h1>{{ siteName }}</h1>
        {% endif %}
    </a>
    <p>&copy; Copyright {{ now|date('Y') }}</p>
</div>
